<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <style name="MyTheme.NoTitleBar.SplashWindow" parent="android:Theme">
        <item name="android:windowBackground">@drawable/launch</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Text.BigStye" parent="android:TextAppearance">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#202020</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Text.ValueStyle" parent="android:TextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">#606060</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Widget.AppTheme.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.AppTheme.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#FF5722</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="AppTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.StatusBar.Title">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Widget.Theme.LookHeart.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <!--액션바(타이틀바) 배경색-->
    <style name="ActionBarStyle" parent="@style/Widget.AppCompat.ActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:shadowColor">#00000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <!--editText 배경색-->
    <style name="editText" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">#62AFFF</item> <!-- 하이라이트 색 -->
        <item name="colorControlNormal">#555555</item> <!-- normal 색 -->
    </style>

    <!--datePicker 배경색-->
    <style name="RoundedDatePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePickerStyle</item>
        <item name="android:windowBackground">@drawable/date_picker_dialog_background</item>
    </style>

    <style name="MyDatePickerStyle" parent="android:Widget.Material.Light.DatePicker">
        <item name="android:datePickerMode">spinner</item>
    </style>

    <!-- bottom navigation View -->
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="elevation">0dp</item>
        <item name="itemBackground">@android:color/transparent</item>
        <item name="background">@android:color/white</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

</resources>
